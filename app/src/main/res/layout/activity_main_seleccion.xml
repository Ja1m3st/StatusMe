                android:layout_height="match_parent"
                android:text="Selecciona tu estado de Animo:"
                android:fontFamily="@font/medio"
                android:textSize="20dp"
                android:textColor="@color/green_main"
                android:layout_marginLeft="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/estados"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_below="@+id/TituloAnimo"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp">

                <CheckBox
                    android:id="@+id/feliz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/checkbox_background"
                    android:button="@null" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:src="@drawable/muyfeliz"
                    android:scaleType="fitCenter"
                    android:padding="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bien"
                        android:paddingBottom="5dp"
                        android:paddingRight="2dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp">

                <CheckBox
                    android:id="@+id/medio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/checkbox_background"
                    android:button="@null"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:src="@drawable/caraseria"
                    android:scaleType="fitCenter"
                    android:padding="10dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp">

                <CheckBox
                    android:id="@+id/mal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/checkbox_background"
                    android:button="@null"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:src="@drawable/caratriste"
                    android:scaleType="fitCenter"
                    android:padding="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mal"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>    >
        </LinearLayout>
        <LinearLayout
